<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/action_mode_background</item>
    </style>

    <style name="FolderTitle">
        <item name="android:textSize">@dimen/normal_100</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="BookmarkTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/normal_100</item>
    </style>

    <style name="SelectFolderBtn">
        <item name="android:textSize">@dimen/normal_100</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

</resources>
