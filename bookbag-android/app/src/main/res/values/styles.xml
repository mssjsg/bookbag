<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ActionModeOverflowMenu" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="FolderTitle">
        <item name="android:textSize">@dimen/normal_100</item>
        <item name="android:textColor">@color/colorTextFolderName</item>
    </style>

    <style name="BookmarkTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/normal_100</item>
    </style>

    <style name="SelectFolderBtn">
        <item name="android:textSize">@dimen/normal_100</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorGreen4</item>
    </style>

</resources>
